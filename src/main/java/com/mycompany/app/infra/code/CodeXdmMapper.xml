<insert id="insert" >
insert into 
	`code`
	(delNy,name,codeGroup_seq)
	values
	(1,#{name},#{codeGroup_seq})
;
</insert>

 <delete id="delete">
UPDATE code
SET
	delNy = 0
WHERE
	name = #{name}
</delete> 

