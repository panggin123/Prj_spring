<select id="selectList" resultMap="resultMapObj">
	SELECT 
		seq
		,name
		,delNy
		,codeGroup_seq
	FROM
		code
</select>
 
<select id="selectOne" resultMap="resultMapObj">
	SELECT *
	FROM
		code
	WHERE
		seq = #{seq}
				
</select> 

 <update id="update">
UPDATE code
SET
	name = #{name}
WHERE
	seq = #{seq}
</update> 
