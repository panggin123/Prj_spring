<select id="selectOne" resultMap="resultMapObj">
	SELECT *
	FROM
		code
	WHERE
		seq = #{seq}
				
</select> 

 <update id="update">
UPDATE code
SET
	name = #{name}
	,codeGroup_seq = #{codeGroup_seq}
WHERE
	seq = #{seq}
</update> 
